            android:layout_height="55dp"
            android:onClick="butClick"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button22"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="butClick"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button23"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="butClick"
